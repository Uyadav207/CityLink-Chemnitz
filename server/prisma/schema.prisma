datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                Int                  @id @default(autoincrement())
  username          String               @unique
  password          String
  firstName         String
  lastName          String
  email             String               @unique
  phoneNo           String               @unique
  userType          UserType             @default(REGULAR)
  isDeleted         Boolean              @default(false)
  createdAt         DateTime             @default(now())
  addresses         Address[]       
  favouriteCategories FavouriteCategory[]
}

model Address {
  id        Int      @id @default(autoincrement())
  street    String
  city      String
  state     String
  zipCode   String
  country   String
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}

model FavouriteCategory {
  id     Int    @id @default(autoincrement())
  name   String
  userId Int
  user   User   @relation(fields: [userId], references: [id])
}

enum UserType {
  REGULAR
  SUPER
}


model Apischule {
  id       Int      @id @default(autoincrement())
  features String
}

model ApiSchulsozialarbeit {
  id       Int      @id @default(autoincrement())
  features String
}

model ApiKindertageseinrichtungen {
  id       Int      @id @default(autoincrement())
  features String
}

model ApiJugendberufshilfe {
  id       Int      @id @default(autoincrement())
  features String
}


